<body>
    <div class="text-center" id="login-logo-img">
        <a href="http://fcanalise.com.br"><img src="/img/logo.png" width="350" height="105.41"></a>
    </div>
    <div id="login"> 
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" action="/login" method="POST">
                            <h3 class="text-center">Login</h3>
                            <input type="hidden" name="_csrf" value="{{csrf}}">
                            <div class="form-group">
                                <label for="email">E-mail:</label><br>
                                <input type="email" name="email" id="emailField" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="password">Senha:</label><br>
                                <input type="password" name="password" id="passwordField" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="remember-me"><span>Lembrar-me</span>
                                    <span><input id="remember-me" name="remember-me" type="checkbox"></span>
                                </label>
                                <br>
                                <input type="submit" name="submit" class="btn btn-info btn-md" value="Logar">
                            </div>
                            <div id="register-link" class="text-right">
                                <a href="#">Criar nova conta</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
